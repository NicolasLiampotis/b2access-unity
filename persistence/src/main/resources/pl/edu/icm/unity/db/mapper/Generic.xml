<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pl.edu.icm.unity.db.mapper.GenericMapper">

	<resultMap id="objectResult" type="GenericObjectB">
		<result property="id" column="ID"/>
		<result property="name" column="NAME"/>
		<result property="type" column="TYPE"/>
		<result property="contents" column="CONTENTS"/>
	</resultMap>

	<insert id="insertObject" parameterType="GenericObjectB" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO VAR_OBJECTS(NAME, CONTENTS, TYPE) VALUES (#{name}, #{contents}, #{type})
	</insert>
	
	<delete id="deleteObject" parameterType="long">
		DELETE FROM VAR_OBJECTS WHERE id = #{value}
	</delete>

	<delete id="deleteObjectsByType" parameterType="string">
		DELETE FROM VAR_OBJECTS WHERE TYPE = #{value}
	</delete>
	
	<update id="updateById" parameterType="GenericObjectB">
		UPDATE VAR_OBJECTS SET CONTENTS=#{contents}, NAME=#{name}, TYPE=#{type} WHERE id = #{id}  
	</update>
	
	<select id="selectObjectsByType" parameterType="string" resultMap="objectResult">
		SELECT * FROM VAR_OBJECTS WHERE type = #{value}
	</select>

	<select id="selectObjectById" parameterType="long" resultMap="objectResult">
		SELECT * FROM VAR_OBJECTS WHERE id = #{value}
	</select>
</mapper>