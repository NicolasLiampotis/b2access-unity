<assembly>
	<id>dist</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>src/main/bundle</directory>
			<includes>
				<include>LICENCE.txt</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/conf</directory>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/data</directory>
			<outputDirectory>/data</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/logs</directory>
			<outputDirectory>/logs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/extra</directory>
			<outputDirectory>/extra</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<directoryMode>0755</directoryMode>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>
