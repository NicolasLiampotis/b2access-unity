{
	"name": "samlProfile",
	"description": "Allows to translate remote SAML IdP data into local representation.",
	"rules": [
		{
			"condition": {
				"conditionValue": "true"
			}, 
			"action": {
				"name": "mapAttributeToIdentity",
				"parameters": [
					"urn:oid:2.5.4.3",
					"userName",
					"Password requirement"
				]
			}			
		},
			
		{
			"condition": {
				"conditionValue": "true"
			}, 
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"urn:oid:2.5.4.4",
					"cn",
					"/"
				]
			}			
		},	

		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapGroup",
				"parameters": [
					"student",
					"/A/B"
				]
			}			
		},	

		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "createUser",
				"parameters": [
					"true"
				]
			}			
		},	

		{
			"condition": {
				"conditionValue": "false"
			},
			"action": {
				"name": "updateGroups",
				"parameters": [
					".*"
				]
			}			
		}
	]
}